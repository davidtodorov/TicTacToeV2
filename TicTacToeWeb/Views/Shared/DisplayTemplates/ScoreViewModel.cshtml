@using TicTacToe.Common.Constants
@model IList<ScoreViewModel>

@for (int i = 0; i < Model.Count; i++)
{
    <tr>
        <td>@(i + 1)</td>
        <td>@Model[i].Username</td>
        <td>@Model[i].Wins</td>
        <td>@Model[i].Draws</td>
        <td>@Model[i].Loses</td>
        <td>@Model[i].Points</td>
        @if (this.User.IsInRole(RoleConstants.ADMIN_ROLE))
        {
            <td>
                <input type="button" user-id="@Model[i].UserId" value="Reset Scores" id="openResetScoresWindow"class="btn btn-danger"/>
            </td>
        }
    </tr>
}