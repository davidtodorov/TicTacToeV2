@model IList<HistoryViewModel>

@for (int i = 0; i < Model.Count; i++)
{
    string result = "";
    if (Model[i].ScoreStatus == ScoreStatus.Draw)
    {
        result = "draw";
    }
    if (Model[i].ScoreStatus == ScoreStatus.Win)
    {
        result = "won";
    }
    else
    {
        result = "lost";
                
    }
    <tr>
        <td class ="col-md-1">@(i + 1)</td>
        <td class ="col-md-4">You have <b>@result</b> in <b>@Model[i].GameName</b> vs <b>@Model[i].OppononetUsername!</b></td>
        <td class="col-md-4">@Model[i].Date</td>
        @if (this.User.IsInRole("Administrator"))
        {
            <td class="col-md-3">
                <button id="openDeleteHistoryWindow" class ="btn btn-danger" user-id="@Model[i].UserId" history-id="@Model[i].Id">Delete</button>
            </td>
        }
    </tr>
}