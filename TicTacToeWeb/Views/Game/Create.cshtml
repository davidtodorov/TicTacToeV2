@model CreateGameBindingModel

@{
    ViewData["Title"] = "Create a game";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container">
                @Html.EditorForModel()
                <button type="submit" class="btn btn-success create-game-btn">Submit</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/games.js"></script>
}
