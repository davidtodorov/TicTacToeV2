@model UserDetailsViewModel


<h2>Details for: @Model.FirstName @Model.LastName</h2>

<h2 style="margin-top:65px">Scores</h2>

<table class="table table-striped" style="margin-top: 25px;">
    <thead>
        <tr>
            <th>#</th>
            <th>Username</th>
            <th>Wins</th>
            <th>Draws</th>
            <th>Loses</th>
            <th>Points</th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @Html.DisplayFor(m => m.Scores, "ScoreViewModel")
    </tbody>
</table>

<br />

@if (Model.History.Count != 0)
{
    <h2>History</h2>
    <table class="table table-striped" style="margin-top: 25px;">
        <thead>
        <tr>
            <th class="col-md-1">#</th>
            <th class="col-md-4">History</th>
            <th class="col-md-4">Date</th>
            <th class="col-md-3">
                <button id="openDeleteAllHistoryWindow" class="btn btn-danger" user-id="@Model.Id">Delete All</button>
            </th>
        </tr>
        </thead>
        <tbody>
        @Html.DisplayFor(m => m.History, nameof(HistoryViewModel))
        </tbody>
    </table>
}
else
{
    <h2>History - the user doesn't have history</h2>
}



<!-- Modal Reset Scores-->
<div class="modal fade" id="resetScoreWindow" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <p>You are gonna this user's Scores! Are you sure?</p>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary btn-sm resetScoresButton" role="button">Delete</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<!-- Modal Delete History-->
<div class="modal fade" id="deleteHisotryWindow" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <p>You are gonna delete this history! Are you sure?</p>
                </div>
            </div>
            <div class="modal-footer">
                <button id="deleteBtn"class="btn btn-primary btn-sm deleteHistoryButton" role="button">Delete</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin.js"></script>
}